
<div class="card">

    {{#each erros}}
        <div class="alert alert-danger">{{text}}</div>
    {{else}}

    {{/each}}
    <h1 class="card card-header">Registro</h1>
    <div class="card-body card">
        <form action="/user/registro" method="post">
            <label for="nome">Nome</label>
            <input type="text" name="nome" class="form-control"
            required>
            <label for="email">Email</label>
            <input type="email" name="email" class="form-control"
            required>

            <label for="senha">Senha</label>
            <input type="password" name="senha" class="form-control"
            required>
            <label for="senha_2">Repita a sua senha</label>
            <input type="password" name="senha_2" class="form-control"
            required>

            <button class="btn btn-primary mt-2">Criar conta</button>
        </form>
    </div>
</div>