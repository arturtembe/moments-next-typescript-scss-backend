
<div class="card">

{{#each erros}}
    <div class="alert alert-danger">{{text}}</div>
{{else}}

{{/each}}

    <h1 class="card-header centre">Nova Postagen</h1>

    <div class="card-body">

        <form action="/admin/postagens/nova" method="post">
            <label for="titulo">Titulo</label>
            <input type="text" name="titulo" class="form-control">
            <label for="slug">Slug</label>
            <input type="text" name="slug"class="form-control">
            <label for="descricao">Descricao</label>
            <input type="text" name="descricao" class="form-control">
            <label for="conteudo">Conteudo</label>
            <textarea name="conteudo" class="form-control"></textarea>
            
            <label>categoria</label>

            <select name="categoria" class="form-control custom-select">
                {{#each categorias}}
                <option value="{{ _id }}">{{nome}}</option>
                {{else }}
                <option value="0">Nenhuma categoria registrada</option>
                {{/each }}
            </select>
            
            <button type="submit" class="btn btn-success mt-4">Criar postagens</button>
        </form>
    </div>
</div>